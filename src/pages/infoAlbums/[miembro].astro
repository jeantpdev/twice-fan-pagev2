---

import BaseLayoutMember from "@/layouts/BaseLayoutMembers.astro";
import miembros from "@/data/members.json";
import ReturnButton from "@/components/ReturnButton.astro";

export async function getStaticPaths() {
  return miembros.map((miembro) => ({
    params: {
      miembro: miembro.nickname
    },
    props: {
      miembros: miembro
    },
  }));
}
const { name, nickname, born, name_korea, image } = Astro.props.miembros

console.log(name)

---

<BaseLayoutMember title="Miembros" textColor='text-black'>

  <div class="central">
    <ReturnButton pagina = "miembros"/>
    <div class="contenido-central">

      <div class="flex flex-col lg:flex-row justify-center">
        <div class="">
          <h1 class="text-4xl font-semibold">{name}</h1>
          <div class="w-20 md:w-36 lg:w-40 bg-zinc-900 h-1"></div>
          <p class="text-xl">{nickname}</p>
          <p class="born">{born}</p>
          <p class="name-korea">{name_korea}</p>
        </div>

        <div class="idol-img">
          <img src={image} class="lg:w-[700px]" alt="" />
        </div>
      </div>
    </div>
  </div>
</BaseLayoutMember>
